@using Yardimci.WebApp
@model IEnumerable<Yardimci.Entities.Hizmetler>


@{
    ViewBag.Title = "Hizmetler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-10 col-md-offset-2">

        <h2>Hizmetler</h2>
        <hr />

    </div>

</div>

<div class="row">

    <div class="col-md-10 col-md-offset-1">
        <p>

            <a href="/Hizmetler/Create" class="btn btn-success">
                <span class="glyphicon glyphicon-plus"></span> Ekle
            </a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Baslik)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HizmetTuru)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OlusturulmaZamani)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DegistirilmeZamani)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DegistirenKullanici)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Baslik)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HizmetTuru)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OlusturulmaZamani)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DegistirilmeZamani)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DegistirenKullanici)
                    </td>
                    <td>

                        <a href="/Hizmetler/Edit/@item.ID" class="btn btn-warning btn-sm" title="Düzenle">
                            <span class="glyphicon glyphicon-edit"></span>Düzenle
                        </a>

                        <a href="/Hizmetler/Details/@item.ID" class="btn btn-info btn-sm" title="Detayları Gör">
                            <span class="glyphicon glyphicon-search"></span>Detaylar
                        </a>
                        <a href="/Hizmetler/Delete/@item.ID" class="btn btn-danger btn-sm" title="Sil">
                            <span class="glyphicon glyphicon-trash"></span>Sil
                        </a>



                    </td>
                </tr>
            }

        </table>
    </div>

</div>

