@using Yardimci.Entities

<!DOCTYPE html>


<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Yardımcı.Net</title>

    <!-- Bootstrap core CSS -->


    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- Add custom CSS here -->

    <link href="~/Content/shop-homepage.css" rel="stylesheet" />

    <!-- JavaScript -->

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <hr /><hr />
</head>

<body>
    @{ 
        Kullanici user = null;
        

        if(Session["login"] != null)
        {
            user = Session["login"] as Kullanici;
        }
 
    }


    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Menü</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home/Index"><span class="glyphicon glyphicon-home"></span>YARDIMCIM</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav">

                    <li>
                        <a href="/Home/MostLiked">
                            <span class="glyphicon glyphicon-star"></span>Favori Yardımcılar
                        </a>
                    </li>
                    <li>
                        <a href="/Home/Ekonomik">
                            <span class="glyphicon glyphicon-circle-arrow-down"></span>Ekonomik Yardımcılar
                        </a>
                    </li>

                    <li>
                        <a href="/Home/About">
                            <span class="glyphicon glyphicon-resize-horizontal"></span>Hakkımızda
                        </a>
                    </li>

                    

                    @if (user != null)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <span class="glyphicon glyphicon-wrench"></span>
                                Yönetim<span class="caret"></span>
                            </a>
                        

                            <ul class="dropdown-menu">
                                

                                @if (user.YardimciMi == false && user.AdminMi == false)
                                {
                                    <li>
                                        <a href="/Calisan/CalisanList">
                                            <span class="glyphicon glyphicon-th-list"></span>Çalışanlar
                                        </a>
                                    </li>

                                    <li>
                                        <a href="/Calisan/LikedCalisan">
                                            <span class="glyphicon glyphicon-heart"></span>En Beğenilen Çalışanlar
                                        </a>
                                    </li>
                                    <li role="separator" class="divider"></li>

                                    <li>
                                        <a href="/Hizmetler/HizmetList">
                                            <span class="glyphicon glyphicon-th-list"></span>Hizmetler
                                        </a>
                                    </li>
                                    <li role="separator" class="divider"></li>

                                    <li>
                                        <a href="/Siparisler/Siparislerim">
                                            <span class="glyphicon glyphicon-cloud"></span>Siparişlerim
                                        </a>
                                    </li>

                                    <li role="separator" class="divider"></li>

                                    <li>
                                        <a href="/Siparisler/Siparislerim">
                                            <span class="glyphicon glyphicon-cloud"></span>Yorumlarım
                                        </a>
                                    </li>

                                    <li>
                                        <a href="/Siparisler/Siparislerim">
                                            <span class="glyphicon glyphicon-heart"></span>Beğendiklerim
                                        </a>
                                    </li>




                                }







                                @if (user.AdminMi == true)
                                {
                                    <li>
                                        <a href="/Hizmetler/Create">
                                            <span class="glyphicon glyphicon-plus"></span>Hizmet  Ekle
                                        </a>
                                    </li>

                                    <li>
                                        <a href="/Hizmetler/Index">
                                            <span class="glyphicon glyphicon-th-list"></span>Hizmet Listele
                                        </a>
                                    </li>
                                    <li role="separator" class="divider"></li>

                                    <li>
                                        <a href="/Kullanici/Index">
                                            <span class="glyphicon glyphicon-th-list"></span>Kullanıcılar
                                        </a>
                                    </li>

                                    <li>
                                        <a href="/Kullanici/Create">
                                            <span class="glyphicon glyphicon-plus"></span>Kullanıcı Ekle
                                        </a>
                                    </li>


                                    <li role="separator" class="divider"></li>

                                    <li>
                                        <a href="/Calisan/Index">
                                            <span class="glyphicon glyphicon-th-list"></span>Çalışanlar
                                        </a>
                                    </li>

                                    <li>
                                        <a href="/Calisan/Create">
                                            <span class="glyphicon glyphicon-plus"></span>Çalışan Ekle
                                        </a>
                                    </li>

                                    <li>
                                        <a href="/Calisan/LikedCalisan">
                                            <span class="glyphicon glyphicon-heart"></span>En Beğenilen Çalışanlar
                                        </a>
                                    </li>
                                    <li role="separator" class="divider"></li>

                                    <li>
                                        <a href="/Siparisler/SiparisList">
                                            <span class="glyphicon glyphicon-th-list"></span>Tüm Yorumlar
                                        </a>
                                    </li>


                                    <li role="separator" class="divider"></li>

                                    <li>
                                        <a href="/Siparisler/SiparisList">
                                            <span class="glyphicon glyphicon-th-list"></span>Tüm Siparişler
                                        </a>
                                    </li>


                                }

                            </ul>

                        </li>

                    }


                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (user == null)
                    {
                        <li>
                            <a href="/Home/Login">
                                <span class="glyphicon glyphicon-log-in"></span>Giriş
                            </a>

                        </li>

                        <li>
                            <a href="/Home/CalisanRegister">
                                <span class="glyphicon glyphicon-log-in"></span>Hizmet Ver
                            </a>

                        </li>

                        <li>
                            <a href="/Home/Register">
                                <span class="glyphicon glyphicon-user"></span>Kayıt Ol
                            </a>

                        </li>
                    }
                    else
                    {


                        <li class="dropdown">
                            <a href="/Home/ShowProfile" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <span class="glyphicon glyphicon-user"></span> @user.KullaniciAdi <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="/Home/ShowProfile">
                                        <span class="glyphicon glyphicon-user"></span> Profili Göster
                                    </a>
                                </li>
                                <li role="separator" class="divider"></li>

                                <li>
                                    <a href="/Home/EditProfile">
                                        <span class="glyphicon glyphicon-edit"></span> Profili Düzenle
                                    </a>
                                </li>

                                <li>
                                    <a href="/Home/DeleteProfile" onclick="return confirm('Hesabınızı silmek istediğinize emin misiniz ? ');">
                                        <span class="glyphicon glyphicon-trash"></span> Profili Sil
                                    </a>
                                </li>

                            </ul>

                        </li>

                        <li>
                            <a href="/Home/Logout">
                                <span class="glyphicon glyphicon-log-out"></span>Çıkış
                            </a>

                        </li>
                    }

                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    
    @RenderBody()

    
    <!-- /.container -->

    <div class="container">

        <hr>

        <footer>
            <div class="row">
                <div class="col-lg-4 text-center">
                    <p>
                        Copyright &copy; Furkan Toka <a href="http://github.com/FurkanTOKA/">Github</a>
                    </p>
                </div>
                <div class="col-lg-4 text-center">
                    <p>
                        Tüm hakları saklıdır &copy; @DateTime.Now.Year <a href="http://github.com/FurkanTOKA/">Github</a>
                    </p>
                </div>
                <div class="col-lg-4 text-center">
                    <p>
                        Copyright &copy; Furkan Toka <a href="http://github.com/FurkanTOKA/">Github</a>
                    </p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->



</body>


