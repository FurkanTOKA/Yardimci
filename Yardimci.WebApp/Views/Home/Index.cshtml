@using Yardimci.Entities


@model List<Calisan>


@{
    ViewBag.Tittle = "Index";
}
<!--  Page Content  -->
<div class="container">
    <div class="row">
        <!--Kategoriler-->
        <div class="col-md-3">
            @Html.Partial("_PartialHizmetler")
        </div>

        <div class="col-md-9">
            <!--Carousel-->
            <div class="row carousel-holder">

                <div class="col-md-12">
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="item active">
                                <img class="slide-image" src="https://i.hizliresim.com/GmLg3N.jpg" alt="">
                            </div>
                            <div class="item">
                                <img class="slide-image" src="https://i.hizliresim.com/6a3EmE.jpg" alt="">
                            </div>
                            <div class="item">
                                <img class="slide-image" src="https://i.hizliresim.com/36y3A5.jpg" alt="">
                            </div>
                        </div>
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div>
                </div>

            </div>

            <!--Yardımcılar-->
            <div class="row">

                @foreach (Calisan calisan in Model)
                {

                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            <hr /><br />
                            <img src="~/images/@calisan.ProfileImageFileName" class="img-circle" width="128" height="128" />
                            <div class="caption">
                                <h4>
                                    <a href="#">
                                        @calisan.Tip
                                    </a>
                                </h4>
                                <p>
                                    Saatlik Ücret
                                    @calisan.SaatlikUcret

                                </p>
                                <h6 class="text-right">



                                    <span class="glyphicon glyphicon-time"></span>Hizmet Başlaşgıcı @calisan.OlusturulmaZamani

                                    <p>
                                        <a href="#" class="btn btn-danger btn-sm">
                                            <span class="glyphicon glyphicon-user"></span>@calisan.KullaniciAdi<br />
                                        </a>
                                        <button class="btn btn-success btn-sm" type="button">
                                            <span class="glyphicon glyphicon-leaf">
                                                HizmetAl
                                            </span>
                                        </button>
                                    </p>
                                </h6>

                            </div>
                            <div>
                                <hr />
                            </div>
                            <div class="ratings">
                                <p class="pull-right">
                                    <button class="btn btn-default btn-sm">
                                        <span class="glyphicon glyphicon-commet">Yorumlar</span>
                                    </button>
                                </p>



                                <p>
                                    <button class="btn btn-default btn-sm" type="button">
                                        <span class="glyphicon glyphicon-star-empty">
                                        </span>@calisan.Liked.Count
                                    </button>
                                </p>

                            </div>
                        </div>

                    </div>

                }

            </div>
        </div>
    </div>
</div>
